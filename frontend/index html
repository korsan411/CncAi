      switch(gcodeType) {
        case 'heatmap':
          gcode = generateGcodeFromHeatmap(precision);
          break;
        case '3dmodel':
          gcode = generateGcodeFrom3DModel(precision);
          break;
        case 'edges':
          if (edgePaths.length === 0) {
            showNotification('ÙŠØ¬Ø¨ Ø§Ø³ØªØ®Ø±Ø§Ø¬ Ø§Ù„Ø­ÙˆØ§Ù Ø£ÙˆÙ„Ø§Ù‹', true);
            return;
