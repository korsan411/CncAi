      gcode += `M5 ; Spindle off\n`;
      gcode += `G0 X0 Y0 ; Return to home\n`;
      gcode += `M30 ; Program end\n`;
      
      return gcode;
    }

    // ØªÙˆÙ„ÙŠØ¯ G-code Ù…Ù† Ø§Ù„Ù†Ù…ÙˆØ°Ø¬ Ø«Ù„Ø§Ø«ÙŠ Ø§Ù„Ø£Ø¨Ø¹Ø§Ø¯
    function generateGcodeFrom3DModel(precision) {
      // Ù‡Ø°Ù‡ Ø¯Ø§Ù„Ø© Ù…Ø¨Ø³Ø·Ø© Ù„Ù…Ø­Ø§ÙƒØ§Ø© Ø§Ù„ØªÙˆÙ„ÙŠØ¯ Ù…Ù† Ù†Ù…ÙˆØ°Ø¬ 3D
