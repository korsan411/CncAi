          // Ø±ÙØ¹ Ø§Ù„Ø£Ø¯Ø§Ø© ÙÙŠ Ù†Ù‡Ø§ÙŠØ© Ø§Ù„ØµÙ
          gcode += `G0 Z5\n`;
