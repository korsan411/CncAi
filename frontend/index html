      for (let i = 0; i < edgePaths.length; i++) {
        const path = edgePaths[i];
        if (path.length === 0) continue;
        
        gcode += `; Path ${i+1}\n`;
        
        // Ø§Ù„Ø§Ù†ØªÙ‚Ø§Ù„ Ø¥Ù„Ù‰ Ù†Ù‚Ø·Ø© Ø§Ù„Ø¨Ø¯Ø§ÙŠØ©
