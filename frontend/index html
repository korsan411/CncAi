    // ØªÙˆÙ„ÙŠØ¯ G-code
    function generateGcode() {
      if (!heightMapData) {
        showNotification('ÙŠØ¬Ø¨ ØªØ­Ù…ÙŠÙ„ ØµÙˆØ±Ø© Ø£ÙˆÙ„Ø§Ù‹', true);
        return;
