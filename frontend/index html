      }
      
      gcodeOutput.textContent = gcode;
      showNotification('ØªÙ… ØªÙˆÙ„ÙŠØ¯ G-code Ø¨Ù†Ø¬Ø§Ø­');
    }

    // ØªÙˆÙ„ÙŠØ¯ G-code Ù…Ù† Heatmap
    function generateGcodeFromHeatmap(precision) {
